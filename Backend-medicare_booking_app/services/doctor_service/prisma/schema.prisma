// This is your Prisma schema file for Doctor Management Service
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Enum definitions
enum Gender {
  Male
  Female
  Other
}

enum ApprovalStatus {
  Pending
  Approved
  Rejected
}

// Specialties table
model Specialty {
  specialtyId   Int     @id @default(autoincrement()) @map("specialty_id")
  specialtyName String  @map("specialty_name") @db.VarChar(255)
  iconPath      String? @map("icon_path") @db.VarChar(255)
  description   String? @db.Text

  // Relations
  doctors Doctor[]

  @@map("specialties")
}

// Clinics table
model Clinic {
  clinicId    Int     @id @default(autoincrement()) @map("clinic_id")
  clinicName  String  @map("clinic_name") @db.VarChar(255)
  city        String? @db.VarChar(100)
  district    String? @db.VarChar(100)
  street      String? @db.VarChar(100)
  phone       String? @db.VarChar(20)
  description String? @db.Text

  // Relations
  doctors   Doctor[]
  schedules Schedule[]
  fees      Fee[]

  @@map("clinics")
}

// Doctors table
model Doctor {
  doctorProfileId Int            @id @default(autoincrement()) @map("doctor_profile_id")
  userId          Int            @unique @map("user_id")
  fullName        String         @map("full_name") @db.VarChar(255)
  phone           String?        @db.VarChar(20)
  specialtyId     Int            @map("specialty_id")
  clinicId        Int            @map("clinic_id")
  bio             String?        @db.Text
  experienceYears Int?           @map("experience_years")
  gender          Gender
  avatarUrl       String?        @map("avatar_url") @db.VarChar(255)
  approvalStatus  ApprovalStatus @default(Pending) @map("approval_status")
  licenseNumber   String         @unique @map("license_number") @db.VarChar(50)
  createdAt       DateTime       @default(now()) @map("created_at")

  // Relations
  specialty Specialty  @relation(fields: [specialtyId], references: [specialtyId])
  clinic    Clinic     @relation(fields: [clinicId], references: [clinicId])
  schedules Schedule[]
  fees      Fee[]

  @@map("doctors")
}

// Schedules table
model Schedule {
  scheduleId      Int      @id @default(autoincrement()) @map("schedule_id")
  doctorProfileId Int      @map("doctor_profile_id")
  clinicId        Int      @map("clinic_id")
  date            DateTime @db.Date
  startTime       DateTime @map("start_time") @db.Time
  endTime         DateTime @map("end_time") @db.Time
  isAvailable     Boolean  @default(true) @map("is_available")

  // Relations
  doctor Doctor @relation(fields: [doctorProfileId], references: [doctorProfileId])
  clinic Clinic @relation(fields: [clinicId], references: [clinicId])

  @@map("schedules")
}

// Fees table
model Fee {
  feeId           Int      @id @default(autoincrement()) @map("fee_id")
  doctorProfileId Int      @map("doctor_profile_id")
  clinicId        Int      @map("clinic_id")
  consultationFee Decimal  @default(0.00) @map("consultation_fee") @db.Decimal(10, 2)
  bookingFee      Decimal  @default(0.00) @map("booking_fee") @db.Decimal(10, 2)
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  doctor Doctor @relation(fields: [doctorProfileId], references: [doctorProfileId])
  clinic Clinic @relation(fields: [clinicId], references: [clinicId])

  @@map("fees")
}
